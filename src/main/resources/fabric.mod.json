{
  "schemaVersion": 1,
  "id": "${mod_id}",
  "version": "${mod_version}",
  "name": "${mod_name}",
  "description": "${mod_description}",
  "authors": ["${mod_authors}"],
  "contact": {
    "homepage": "https://github.com/UltimatChamp/BetterGrassify",
    "issues": "https://github.com/UltimatChamp/BetterGrassify/issues"
  },
  "license": "${mod_license}",
  "icon": "assets/bettergrass/icon.png",
  "environment": "*",
  "entrypoints": {
    "client": [
      "dev.ultimatchamp.bettergrass.loaders.fabric.BetterGrassifyFabric"
    ],
    "modmenu" : ["dev.ultimatchamp.bettergrass.config.ModMenuAPIImpl"]
  },
  "mixins": [
    "bettergrass.mixins.json"
  ],
  "depends": {
    "minecraft": "${minecraft_range}",
    "fabricloader": "*",
    "fabric": "*",
    "yet_another_config_lib_v3": "*"
  },
  "breaks": {
    "sodium": "${sodium_incompat_range}"
  },
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.modrinth": "https://modrinth.com/mod/BetterGrassify",
        "modmenu.curseforge": "https://www.curseforge.com/minecraft/mc-mods/bettergrassify",
        "modmenu.discord": "https://discord.gg/kfKjjhv3pn"
      },
      "update_checker": true
    }
  }
}
